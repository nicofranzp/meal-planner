generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum MealType {
  breakfast
  lunch
  dinner
}

enum MealPlanStatus {
  draft
  active
  completed
}

enum PantryAvailability {
	HAVE
	LOW
	OUT
}

enum MealPlanItemMealType {
  breakfast
  lunch
  dinner
  snack
}

model Household {
  id   String @id @default(cuid())
  name String

  persons     Person[]
  recipes     Recipe[]
  templates   Template[]
  mealPlans   MealPlan[]
  pantryItems PantryItem[]
}

model Person {
  id                    String @id @default(cuid())
  householdId           String
  name                  String
  portionFactor         Float @default(1.0)
  dislikedIngredientIds Json

  household Household @relation(fields: [householdId], references: [id], onDelete: Cascade)

  @@index([householdId])
}

model Ingredient {
  id        String   @id @default(cuid())
  name      String
  unit      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  recipeIngredients RecipeIngredient[]
  pantryItems       PantryItem[]

  @@unique([name])
}

model Recipe {
  id          String   @id @default(cuid())
  householdId String
  name        String
  description String?
  servings    Float
  instructions String
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  household   Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  ingredients RecipeIngredient[]
  mealPlanItems MealPlanItem[]
  meals       Meal[]

  @@index([householdId])
}

model RecipeIngredient {
  id           String   @id @default(cuid())
  recipeId     String
  ingredientId String
  quantity     Float
  unit         String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  recipe     Recipe     @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  ingredient Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)

  @@unique([recipeId, ingredientId])
  @@index([recipeId])
  @@index([ingredientId])
}

model Template {
  id               String @id @default(cuid())
  householdId      String
  name             String
  periodLengthDays Int

  household Household      @relation(fields: [householdId], references: [id], onDelete: Cascade)
  slots     TemplateSlot[]
  mealPlans MealPlan[]

  @@index([householdId])
}

model TemplateSlot {
  id          String   @id @default(cuid())
  templateId  String
  dayIndex    Int
  mealType    MealType
  allowedTags Json

  template Template @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@index([templateId])
}

model MealPlan {
  id          String         @id @default(cuid())
  householdId String
  templateId  String?
  name        String
  startDate   String         @default("")
  endDate     String         @default("")
  status      MealPlanStatus @default(draft)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  household Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  template  Template? @relation(fields: [templateId], references: [id], onDelete: SetNull)
  meals     Meal[]
  days     MealPlanDay[]

  @@index([householdId])
  @@index([templateId])
}

model MealPlanDay {
  id         String   @id @default(cuid())
  mealPlanId String
  date       String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  mealPlan MealPlan       @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)
  items    MealPlanItem[]

  @@index([mealPlanId])
  @@index([date])
}

model MealPlanItem {
  id        String             @id @default(cuid())
  dayId     String
  recipeId  String
  mealType  MealPlanItemMealType
  servings  Float
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  day    MealPlanDay @relation(fields: [dayId], references: [id], onDelete: Cascade)
  recipe Recipe      @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@index([dayId])
  @@index([recipeId])
}

model Meal {
  id         String   @id @default(cuid())
  mealPlanId String
  date       String
  mealType   MealType
  recipeId   String?
  servings   Float
  locked     Boolean
  notes      String?

  mealPlan MealPlan @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)
  recipe   Recipe?  @relation(fields: [recipeId], references: [id], onDelete: SetNull)
  guests   Guest[]

  @@index([mealPlanId])
  @@index([recipeId])
}

model Guest {
  mealId        String
  portionFactor Float

  meal Meal @relation(fields: [mealId], references: [id], onDelete: Cascade)

  @@id([mealId, portionFactor])
}

model PantryItem {
  id           String            @id @default(cuid())
  householdId   String
  ingredientId  String
  availability  PantryAvailability @default(HAVE)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  household  Household  @relation(fields: [householdId], references: [id], onDelete: Cascade)
  ingredient Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)

  @@unique([householdId, ingredientId])
  @@index([householdId])
  @@index([ingredientId])
}
