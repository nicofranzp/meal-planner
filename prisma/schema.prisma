generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum MealType {
  breakfast
  lunch
  dinner
}

enum MealPlanStatus {
  draft
  active
  completed
}

enum PantryAvailability {
  none
  low
  medium
  high
  unknown
}

model Household {
  id   String @id @default(cuid())
  name String

  persons     Person[]
  recipes     Recipe[]
  templates   Template[]
  mealPlans   MealPlan[]
  pantryItems PantryItem[]
}

model Person {
  id                    String @id @default(cuid())
  householdId           String
  name                  String
  portionFactor         Float
  dislikedIngredientIds Json

  household Household @relation(fields: [householdId], references: [id], onDelete: Cascade)

  @@index([householdId])
}

model Ingredient {
  id       String @id @default(cuid())
  name     String
  category String

  recipeIngredients RecipeIngredient[]
  pantryItems       PantryItem[]
}

model Recipe {
  id           String @id @default(cuid())
  householdId  String
  name         String
  baseServings Int
  tags         Json
  steps        String

  household   Household          @relation(fields: [householdId], references: [id], onDelete: Cascade)
  ingredients RecipeIngredient[]
  meals       Meal[]

  @@index([householdId])
}

model RecipeIngredient {
  recipeId     String
  ingredientId String
  quantity     Float
  unit         String

  recipe     Recipe     @relation(fields: [recipeId], references: [id], onDelete: Cascade)
  ingredient Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)

  @@id([recipeId, ingredientId])
  @@index([ingredientId])
}

model Template {
  id               String @id @default(cuid())
  householdId      String
  name             String
  periodLengthDays Int

  household Household      @relation(fields: [householdId], references: [id], onDelete: Cascade)
  slots     TemplateSlot[]
  mealPlans MealPlan[]

  @@index([householdId])
}

model TemplateSlot {
  id          String   @id @default(cuid())
  templateId  String
  dayIndex    Int
  mealType    MealType
  allowedTags Json

  template Template @relation(fields: [templateId], references: [id], onDelete: Cascade)

  @@index([templateId])
}

model MealPlan {
  id          String         @id @default(cuid())
  householdId String
  templateId  String?
  startDate   String
  endDate     String
  status      MealPlanStatus

  household Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  template  Template? @relation(fields: [templateId], references: [id], onDelete: SetNull)
  meals     Meal[]

  @@index([householdId])
  @@index([templateId])
}

model Meal {
  id         String   @id @default(cuid())
  mealPlanId String
  date       String
  mealType   MealType
  recipeId   String?
  servings   Float
  locked     Boolean
  notes      String?

  mealPlan MealPlan @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)
  recipe   Recipe?  @relation(fields: [recipeId], references: [id], onDelete: SetNull)
  guests   Guest[]

  @@index([mealPlanId])
  @@index([recipeId])
}

model Guest {
  mealId        String
  portionFactor Float

  meal Meal @relation(fields: [mealId], references: [id], onDelete: Cascade)

  @@id([mealId, portionFactor])
}

model PantryItem {
  householdId  String
  ingredientId String
  availability PantryAvailability

  household  Household  @relation(fields: [householdId], references: [id], onDelete: Cascade)
  ingredient Ingredient @relation(fields: [ingredientId], references: [id], onDelete: Cascade)

  @@id([householdId, ingredientId])
  @@index([ingredientId])
}
